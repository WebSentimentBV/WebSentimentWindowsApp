<UserControl
    x:Class="WebSentiment.UserControls.Header.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebSentiment.UserControls.Header"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="50"
    d:DesignWidth="400">

    <Grid Background="{ThemeResource AppBackgroundGrey}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="imgHome" Grid.Column="0" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="80" Margin="10,10,0,0"/>
        <TextBlock x:Name="lblPageName" Grid.Column="1" Foreground="{ThemeResource AppBackgroundWhite}"  HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="WebSentiment" VerticalAlignment="Top" Height="40" Width="180" TextAlignment="Center"/>
        <Image x:Name="imgContact" Grid.Column="2" HorizontalAlignment="Right" Height="30" VerticalAlignment="Top" Width="80" Margin="0,10,10,0"/>

    </Grid>
</UserControl>
