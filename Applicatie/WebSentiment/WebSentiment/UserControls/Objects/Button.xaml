<UserControl
    x:Class="WebSentiment.UserControls.Objects.Button"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="150">

    <Border Margin="1"
                BorderBrush="{ThemeResource AppBackgroundOrange}"
                Background="{ThemeResource AppBackgroundOrange}"
                BorderThickness="2,2,2,2"
                CornerRadius="5,5,5,5">

        <Grid x:Name="buttonGrid" Tapped="buttonGrid_Tapped">


            <TextBlock Foreground="{ThemeResource AppBackgroundWhite}" x:Name="txtPageTitle" HorizontalAlignment="Left" TextWrapping="Wrap" Text="PageTitle" VerticalAlignment="Top" Height="92" Width="694" TextAlignment="Center" MaxLines="1" Margin="0,52,0,0"/>

        </Grid>

    </Border>
</UserControl>
