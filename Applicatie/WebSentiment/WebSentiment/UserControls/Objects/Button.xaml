<UserControl x:Name="ButtonUserControl"
    x:Class="WebSentiment.UserControls.Objects.Button"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="80"
     >

    <Border Margin="1"
                BorderBrush="{ThemeResource AppBackgroundOrange}"

                BorderThickness="2,2,2,2"
                CornerRadius="5,5,5,5">

        <Grid Background="{ThemeResource AppBackgroundOrange}" x:Name="buttonGrid" Tapped="buttonGrid_Tapped">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="8*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Foreground="{ThemeResource AppBackgroundWhite}" x:Name="txtPageTitle" TextWrapping="Wrap" Text="PageTitle" VerticalAlignment="Center" HorizontalAlignment="Center"  Grid.Row="1" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
